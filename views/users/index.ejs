<!DOCTYPE html>
<html>

<head>
  <title>Employee List</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB"
    crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
    crossorigin="anonymous"></script>
</head>

<body>
  <div class="container">
    <nav class="navbar navbar-dark bg-primary text-white">Contact Management
      <form action="" class="form-inline">
        <button class="btn btn-outline-light">Index</button>
        <a href="/users/user" role="button" class="btn btn-outline-light">New</a>
      </form>
    </nav>
  </div>
  <br>
  <br>
  <div class="container">
    <h1>User List</h1>
    <% if(users.length>0) { %>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col"></th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i<users.length;i++) { %>
            <tr>
              <th scope="row"></th>
              <td>
                <%= users[i].name%>
              </td>
              <td>
                <%= users[i].email%>
              </td>
              <td>
                <%= users[i].phone%>
              </td>
              <td>
               
              </td>
              <td>
                <a class="btn btn-outline-warning" href="/users/user/<%= users[i]._id%>" role="button">
                  Edit
                </a>
                <button class="deleteButton btn btn-outline-danger" data-uid="<%= users[i]._id%>">
                  Delete
                </button>
              </td>
            </tr>
            <% } %>
        </tbody>
      </table>
      <% } else { %>
        <div>No users found.</div>
        <% } %>
  </div>

  <script type="text/javascript" src="/javascripts/delete_user.js"></script>
</body>

</html>